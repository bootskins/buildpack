{% macro card(variant, heading) %}
  <div class="card {{ variant }} mb-3">
    <div class="card-header">{{ heading }}</div>
    <div class="card-body">
      <h4 class="card-title">Card title</h4>
      <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. In et orci metus.</p>
    </div>
  </div>
{% endmacro %}

