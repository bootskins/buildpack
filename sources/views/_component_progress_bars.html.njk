{% macro progress_bar(value, variant = '') %}
  <div class="progress">
    <div class="progress-bar {{ variant }}" role="progressbar" style="width: {{ value }}%" aria-valuenow="{{ value }}" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
{% endmacro %}

<h3 id="component-progress-bars">Progress bars <a class="text-muted" href="#component-progress-bars">#</a></h3>
{{ progress_bar(90) }}
{{ progress_bar(80, 'bg-success') }}
{{ progress_bar(70, 'bg-info') }}
{{ progress_bar(60, 'bg-warning') }}
{{ progress_bar(50, 'bg-danger') }}
